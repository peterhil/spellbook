{
  "name": "spellbook",
  "version": "0.4.2",
  "description": "Spellbook bookmark manager",
  "main": "src/popup.js",
  "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "dev": "rm -rf dev/* && rollup -cw",
    "build": "rm -rf dist/* && rollup -c",
    "release": "VERSION=$(git rev-parse --abbrev-ref HEAD 2>/dev/null) && cd dist && zip -r9v ../web-ext-artifacts/spellbook-$VERSION-chrome.zip * && cd -",
    "firefox": "yarn run build && web-ext -s dist",
    "firefox:build": "yarn run build && web-ext -s dist build",
    "firefox:dev": "yarn run dev && web-ext -s dev run",
    "firefox:lint": "yarn run build && web-ext -s dist lint",
    "version": "echo $npm_package_version",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:puppeteer": "mocha test/test.js"
  },
  "dependencies": {
    "events": "^3.2.0",
    "kefir": "~3.8.7",
    "rambda": "^6.7.0",
    "spectre.css": "~0.5.9",
    "zepto-detect": "~0.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "16",
    "@rollup/plugin-node-resolve": "10",
    "@testing-library/svelte": "^3.0.0",
    "ava": "^3.12.1",
    "caniuse-lite": "~1.0.30001159",
    "chokidar": "^3.4.3",
    "eslint": "^7.27.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-svelte3": "~2.7.3",
    "mocha": "^7.1.2",
    "puppeteer": "^9.1.1",
    "require-from-string": "~2.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-svelte": "^6.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.34.0",
    "svelte": "^3.29.7",
    "web-ext": "^5.0.0"
  },
  "browserslist": [
    "Chrome >= 52",
    "Firefox >= 56",
    "FirefoxAndroid >= 56",
    "Firefox ESR",
    "since 2015 and not safari > 0 and not ios_saf > 0 and not ie > 0 and not edge > 0"
  ]
}
