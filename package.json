{
  "name": "spellbook",
  "version": "0.3.6",
  "description": "Spellbook bookmark manager",
  "main": "src/popup.js",
  "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
  "license": "MPL-2.0",
  "scripts": {
    "dev": "rollup -cw",
    "build": "rollup -c",
    "release": "VERSION=$(git rev-parse --abbrev-ref HEAD 2>/dev/null) && cd dist && zip -r9v ../web-ext-artifacts/spellbook-$VERSION-chrome.zip * && cd -",
    "firefox": "web-ext -s dist",
    "firefox:build": "web-ext -s dist build",
    "firefox:dev": "web-ext -s dist run",
    "firefox:lint": "web-ext -s dist lint",
    "version": "echo $npm_package_version",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "fkit": "~3.4.0",
    "kefir": "~3.8.5",
    "riot": "~3.13.0",
    "spectre.css": "~0.5.3",
    "zepto": "~1.2.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "browser-env": "~3.2.5",
    "buble-register": "~1.0.1",
    "caniuse-lite": "~1.0.3",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-riot": "~0.1.8",
    "eslint-plugin-standard": "~4.0.0",
    "postcss": "~7.0.5",
    "require-from-string": "~2.0.2",
    "riot-compiler": "^3.6.0",
    "rollup": "~0.66.5",
    "rollup-plugin-buble": "~0.19.4",
    "rollup-plugin-commonjs": "~9.2.0",
    "rollup-plugin-cpy": "~1.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "~3.4.0",
    "rollup-plugin-postcss": "~2.0.3",
    "rollup-plugin-riot": "^2.1.0",
    "rollup-plugin-sass": "~0.9.2",
    "web-ext": "~2.9.1"
  },
  "ava": {
    "cache": true,
    "concurrency": 8,
    "files": [
      "./test/**/*.spec.js",
      "./test/**/*.test.js"
    ],
    "sources": [
      "!dist/**/*",
      "**/*.{js,tag}",
      "*.config.js",
      "package.json"
    ],
    "require": [
      "buble-register",
      "./test/utils/browser-env",
      "./test/utils/node-extensions"
    ]
  },
  "browserslist": [
    "Chrome >= 52",
    "Firefox >= 56",
    "FirefoxAndroid >= 56",
    "Firefox ESR",
    "since 2015 and not safari > 0 and not ios_saf > 0 and not ie > 0 and not edge > 0"
  ]
}
