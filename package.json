{
  "name": "spellbook",
  "version": "0.3.5",
  "description": "Spellbook bookmark manager",
  "main": "src/popup.js",
  "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
  "license": "MPL-2.0",
  "scripts": {
    "dev": "rollup -cw",
    "build": "rollup -c",
    "firefox": "web-ext -s dist",
    "firefox:build": "web-ext -s dist build",
    "firefox:dev": "web-ext -s dist run",
    "firefox:lint": "web-ext -s dist lint",
    "version": "echo $npm_package_version",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "fkit": "^1.4.0",
    "kefir": "^3.8.5",
    "riot": "^3.13.0",
    "riotgear": "^3.5.0",
    "spectre.css": "^0.5.3",
    "zepto": "^1.2.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "browser-env": "^3.2.5",
    "buble-register": "^1.0.1",
    "caniuse-lite": "^1.0.3",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "postcss": "^7.0.5",
    "postcss-cssnext": "^3.1.0",
    "require-from-string": "^2.0.2",
    "riot-compiler": "^3.3.0",
    "rollup": "^0.66.5",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-cpy": "^1.1.0",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-riot": "^2.0.0",
    "rollup-plugin-sass": "^0.9.2",
    "web-ext": "^2.9.1"
  },
  "ava": {
    "cache": true,
    "concurrency": 8,
    "files": [
      "./test/**/*.spec.js",
      "./test/**/*.test.js"
    ],
    "sources": [
      "!dist/**/*",
      "**/*.{js,tag}",
      "*.config.js",
      "package.json"
    ],
    "require": [
      "buble-register",
      "./test/utils/browser-env",
      "./test/utils/node-extensions"
    ]
  }
}
