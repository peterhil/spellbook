{
  "name": "spellbook",
  "version": "0.4.1",
  "description": "Spellbook bookmark manager",
  "main": "src/popup.js",
  "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
  "license": "MPL-2.0",
  "scripts": {
    "dev": "rm -rf dev/* && rollup -cw",
    "build": "rm -rf dist/* && rollup -c",
    "release": "VERSION=$(git rev-parse --abbrev-ref HEAD 2>/dev/null) && cd dist && zip -r9v ../web-ext-artifacts/spellbook-$VERSION-chrome.zip * && cd -",
    "firefox": "yarn run build && web-ext -s dist",
    "firefox:build": "yarn run build && web-ext -s dist build",
    "firefox:dev": "yarn run dev && web-ext -s dev run",
    "firefox:lint": "yarn run build && web-ext -s dist lint",
    "version": "echo $npm_package_version",
    "test": "jest",
    "test:watch": "jest -- --watch"
  },
  "dependencies": {
    "events": "^3.2.0",
    "fkit": "~3.4.0",
    "kefir": "~3.8.7",
    "spectre.css": "~0.5.9",
    "zepto-detect": "~0.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^26.3.0",
    "browser-env": "~3.2.6",
    "caniuse-lite": "~1.0.30001125",
    "chokidar": "~3.3.1",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "~4.0.1",
    "eslint-plugin-svelte3": "~2.7.3",
    "jest": "^26.4.2",
    "node-sass": "^4.14.1",
    "require-from-string": "~2.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-svelte": "^6.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "~3.16.7",
    "svelte-jester": "^1.1.5",
    "web-ext": "^5.0.0"
  },
  "browserslist": [
    "Chrome >= 52",
    "Firefox >= 56",
    "FirefoxAndroid >= 56",
    "Firefox ESR",
    "since 2015 and not safari > 0 and not ios_saf > 0 and not ie > 0 and not edge > 0"
  ]
}
