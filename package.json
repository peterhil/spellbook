{
    "name": "spellbook",
    "version": "0.4.2",
    "description": "Spellbook bookmark manager",
    "main": "src/popup.js",
    "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
    "license": "MPL-2.0",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist/* && rollup -c",
        "dev": "rm -rf dev/* && rollup -cw",
        "firefox": "pnpm run build && web-ext -s dist",
        "firefox:build": "pnpm run build && web-ext -s dist build",
        "firefox:dev": "pnpm run dev && web-ext -s dev run",
        "firefox:lint": "pnpm run build && web-ext -s dist lint",
        "release": "VERSION=$(git rev-parse --abbrev-ref HEAD 2>/dev/null) && cd dist && zip -r9v ../web-ext-artifacts/spellbook-$VERSION-chrome.zip * && cd -",
        "test": "mocha test",
        "test:puppeteer": "mocha test/test.js",
        "version": "echo $npm_package_version"
    },
    "dependencies": {
        "events": "^3.3.0",
        "kefir": "~3.8.8",
        "rambda": "^6.7.0",
        "spectre.css": "~0.5.9",
        "zepto-detect": "~0.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@babel/eslint-parser": "^7.14.4",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-eslint": "^8.0.1",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@testing-library/svelte": "^3.0.3",
        "addons-linter": "^3.6.0",
        "caniuse-lite": "~1.0.30001235",
        "chokidar": "^3.5.1",
        "eslint": "^7.28.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "mocha": "^8.4.0",
        "puppeteer": "^9.1.1",
        "require-from-string": "~2.0.2",
        "rollup": "^2.51.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-sass": "^1.2.2",
        "rollup-plugin-svelte": "^6.1.1",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.34.1",
        "svelte": "^3.38.2",
        "web-ext": "^6.1.0"
    },
    "browserslist": [
        "Chrome >= 52",
        "Firefox >= 56",
        "FirefoxAndroid >= 56",
        "Firefox ESR",
        "since 2015 and not safari > 0 and not ios_saf > 0 and not ie > 0 and not edge > 0"
    ]
}
