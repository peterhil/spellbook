{
  "name": "spellbook",
  "version": "0.3.7",
  "description": "Spellbook bookmark manager",
  "main": "src/popup.js",
  "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
  "license": "MPL-2.0",
  "scripts": {
    "dev": "rollup -cw",
    "build": "rm -rf dist && rollup -c",
    "release": "VERSION=$(git rev-parse --abbrev-ref HEAD 2>/dev/null) && cd dist && zip -r9v ../web-ext-artifacts/spellbook-$VERSION-chrome.zip * && cd -",
    "firefox": "web-ext -s dist",
    "firefox:build": "web-ext -s dist build",
    "firefox:dev": "web-ext -s dist run",
    "firefox:lint": "web-ext -s dist lint",
    "version": "echo $npm_package_version",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "dependencies": {
    "@riotjs/observable": "~4.0.4",
    "fkit": "~3.4.0",
    "kefir": "~3.8.5",
    "spectre.css": "~0.5.3",
    "zepto": "~1.2.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "browser-env": "~3.2.5",
    "caniuse-lite": "~1.0.3",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "~4.0.0",
    "eslint-plugin-svelte3": "~2.7.3",
    "node-sass": "~4.12.0",
    "require-from-string": "~2.0.2",
    "rollup": "~1.21.4",
    "rollup-plugin-commonjs": "~10.1.0",
    "rollup-plugin-cpy": "~2.0.1",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "~5.2.0",
    "rollup-plugin-sass": "~1.2.2",
    "rollup-plugin-svelte": "~5.1.1",
    "rollup-plugin-terser": "~5.1.2",
    "svelte": "~3.16.0",
    "web-ext": "~2.9.1"
  },
  "ava": {
    "cache": true,
    "concurrency": 8,
    "files": [
      "./test/**/*.spec.js",
      "./test/**/*.test.js"
    ],
    "sources": [
      "!dist/**/*",
      "**/*.{js,svelte}",
      "*.config.js",
      "package.json"
    ],
    "require": [
      "./test/utils/browser-env",
      "./test/utils/node-extensions"
    ]
  },
  "browserslist": [
    "Chrome >= 52",
    "Firefox >= 56",
    "FirefoxAndroid >= 56",
    "Firefox ESR",
    "since 2015 and not safari > 0 and not ios_saf > 0 and not ie > 0 and not edge > 0"
  ]
}
