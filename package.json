{
    "name": "spellbook",
    "version": "0.5.0",
    "description": "Spellbook bookmark manager",
    "main": "src/popup.js",
    "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
    "license": "MPL-2.0",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist/* && rollup -c",
        "dev": "rm -rf dev/* && rollup -cw",
        "firefox": "web-ext",
        "firefox:dev": "web-ext -s dev run",
        "firefox:lint": "web-ext -s dist lint",
        "firefox:sign": "web-ext -s dist sign --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET",
        "firefox:beta": "pnpm run firefox:sign -- --channel=unlisted",
        "lint": "pnpm run lint:js && pnpm run lint:styles",
        "lint:js": "eslint --ignore-pattern '!.*.cjs' ./.*.cjs src/**/*.js src/**/*.svelte test/**/*.js",
        "lint:styles": "stylelint src/**/*.{scss,svelte}",
        "release": "pnpm run release:chrome && pnpm run release:firefox",
        "release:chrome": "VERSION=$(git rev-parse --abbrev-ref HEAD 2>/dev/null) && cd dist && zip -r9v ../web-ext-artifacts/spellbook-$VERSION-chrome.zip * && cd -",
        "release:firefox": "pnpm run build && web-ext -s dist build",
        "test": "mocha test",
        "test:puppeteer": "mocha test/test.js",
        "version": "echo $npm_package_version"
    },
    "dependencies": {
        "events": "^3.3.0",
        "kefir": "~3.8.8",
        "rambda": "^6.7.0",
        "rosegarden": "github:peterhil/rosegarden",
        "spectre.css": "~0.5.9",
        "zepto-detect": "~0.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@babel/eslint-parser": "^7.14.4",
        "@fortawesome/fontawesome-svg-core": "^1.2.35",
        "@fortawesome/free-solid-svg-icons": "^5.15.3",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-eslint": "^8.0.1",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@sveltejs/vite-plugin-svelte": "^2.4.2",
        "@testing-library/svelte": "^3.0.3",
        "chokidar": "^3.5.1",
        "eslint": "^7.28.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "mocha": "^9.0.0",
        "puppeteer": "^10.0.0",
        "require-from-string": "~2.0.2",
        "rollup": "^2.51.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-sass": "^1.2.2",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.34.1",
        "stylelint": "^13.13.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-config-standard": "^22.0.0",
        "svelte": "^3.38.2",
        "svelte-preprocess": "^4.7.3",
        "svelte-preprocess-sass": "^1.0.0",
        "vite": "^4.3.9",
        "vite-plugin-web-extension": "^3.1.0",
        "web-ext": "^7.6.2"
    },
    "browserslist": [
        "Chrome >= 52",
        "Firefox >= 56",
        "FirefoxAndroid >= 56",
        "Firefox ESR",
        "since 2015 and not safari > 0 and not ios_saf > 0 and not ie > 0 and not edge > 0"
    ]
}
