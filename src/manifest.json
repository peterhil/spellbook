{
  "manifest_version": 2,
  "name": "Spellbook",
  "version": "0.3.2",

  "default_locale": "en",
  "description": "__MSG_meta_description__",
  "icons": {
    "32": "asset/icon_32.png",
    "64": "asset/icon_64.png"
  },

  "browser_action": {
    "default_icon": "asset/icon_32.png",
    "default_popup": "popup/popup.html"
  },

  "author": "Peter HillerstroÌˆm <peter.hillerstrom@gmail.com>",
  "background": {
    "persistent": true,
    "page": "background/background.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+D"
      },
      "description": "__MSG_execute_browser_action__"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "homepage_url": "https://github.com/peterhil/spellbook",
  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs"
  ]
}
